{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@data-backend/app": ["apps/data-backend/src/app.module.ts"],
      "@moviebuddy/auth": ["libs/auth/src/index.ts"],
      "@moviebuddy/movie": ["libs/movie/src/index.ts"],
      "@moviebuddy/movie-graph": ["libs/movie-graph/src/index.ts"],
      "@moviebuddy/movielistitem-graph": [
        "libs/movielistitem-graph/src/index.ts"
      ],
      "@moviebuddy/recommendation-graph": [
        "libs/recommendation-graph/src/index.ts"
      ],
      "@moviebuddy/review": ["libs/review/src/index.ts"],
      "@moviebuddy/review-graph": ["libs/review-graph/src/index.ts"],
      "@moviebuddy/shared": ["libs/shared/src/index.ts"],
      "@moviebuddy/user": ["libs/user/src/index.ts"],
      "@moviebuddy/user-graph": ["libs/user-graph/src/index.ts"],
      "@moviebuddy/watchlistitem": ["libs/watchlistitem/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
